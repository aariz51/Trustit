# TrustLit Backend Environment Configuration
# Copy this file to .env and fill in your API keys

# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI API Key (for GPT-4 Vision)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# API Configuration
# Which AI provider to use: 'openai' or 'gemini'
AI_PROVIDER=openai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# ==========================================
# Apple App Store Configuration
# ==========================================

# App-Specific Shared Secret for receipt validation
# Get this from App Store Connect:
# 1. Go to App Store Connect -> Your App -> In-App Purchases
# 2. Click "App-Specific Shared Secret" -> Generate
# 3. Copy the 32-character hex string
APPLE_SHARED_SECRET=your_32_character_hex_string_here

# Your app's bundle ID (must match App Store Connect)
APPLE_BUNDLE_ID=com.trustlit.app
